<div class="container">
  <div class="snapshot">
    <div class="snapshot-title-box">
      <div class="snapshot-title">
        <h1><%= @infringement.name %> </h1>
      </div>
      <div class="snapshot-buttons">
        <div>
          <button id="btn-print-snapshot" class="btn btn-blue btn-margin">Print Snapshot</button>
        </div>
        <div class="save-button-snapshots">
          <a href="<%= cl_image_path(@snapshot.image_path) %>" class="btn btn-blue btn-margin">Save Snapshot</a>
        </div>
        <div>
          <%= link_to "Close", case_infringement_path(@infringement.case, @infringement), class: "btn btn-blue" %>
        </div>
      </div>
    </div>

    <!-- Header of the printout -->
    <div class="snapshot-container p-3 my-3">
      <div class="d-flex justify-content-between align-items-center">
        <div class="arrow-left-snapshots"><i class="fas fa-arrow-left"></i></div>
        <div class="message-snapshots">This is <a href="<%= @infringement.url %>"><%= @base_url %></a> as available online at <%= @snapshot.time %>.</div>
        <div class="arrow-right-snapshots"><i class="fas fa-arrow-right"></i></div>
      </div>
    </div>

    <div class="snapshot-window-snapshots d-flex justify-content-center">
      <%= cl_image_tag @snapshot.image_path, id: "img-snapshots", class: "img-fluid", data: { arrayid: @number } %>
    </div>
    <div class="snapshot-container p-3 my-3">
      The authenticity of this screenshot is guaranteed by Cerberus - the online standard for copyright infringement documentation. Read more at http://cerberus.legal/about
    </div>
  </div>
</div>
</div>
