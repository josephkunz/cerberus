<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <!-- Upper left corner DOG logo and CERBERUS -->
  <div class="home-logo-button">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
      &nbsp <strong>Cerberus</strong>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "My Cases", cases_path, class: "nav-link mr-3" %>
        </li>

        <!-- Navbar Dropdown for showing PROFILE link, and active sites, and credits -->
        <li class="nav-item dropdown">
          <!-- Show either user NAME or EMAIL depending if they added name to account -->
          <% if current_user.first_name %>
            <%= link_to current_user.first_name + ' ' + current_user.last_name, cases_path, class: "nav-link dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= link_to current_user.email, cases_path, class: "nav-link dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <hr>
            <%= link_to "#", class: "dropdown-item" do %>

            Actively Monitored Sites:
            <br>
            <div style="text-align: center; color: mediumseagreen; font-size: 30px;">
              <i class="fas fa-sync"></i> &nbsp 6</div>

            <br>

            Credits Remaining:
            <div style="text-align: center; font-size: 30px;">
              78 &nbsp <i class="fas fa-coins"></i>
            </div>

           <!--  <br>
            User Plan:
            <div style="text-align: center; font-size: 30px;">
              Tier II &nbsp <i class="fas fa-layer-group"></i>
            </div> -->

            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
